{
  "hosting": {
    "source": "client/public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**/**",
        "function": "nextServer"
      }
    ],
    "frameworksBackend": {
      "region": "europe-west1"
    }
  },
  "functions": {
    "source": "server/function",
    "runtime": "nodejs18",
    "ignore": [
      "**/src/**",
      "**/.vscode/**",
      ".firebase/**",
      ".firebaserc",
      "firebase.json",
      "**/node_modules/**",
      "**/public/**",
      "**/.next/cache/**"
    ]
  }
}
