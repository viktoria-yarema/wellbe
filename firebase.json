{
  "hosting": {
    "public": "client/.next",
    "rewrites": [
      {
        "source": "**",
        "function": "nextServer"
      }
    ],
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "frameworksBackend": {
      "region": "europe-west1"
    }
  },
  "functions": {
    "source": "server/functions",
    "runtime": "nodejs18",
    "ignore": [
      "**/src/**",
      "**/.vscode/**",
      ".firebase/**",
      ".firebaserc",
      "firebase.json",
      "**/node_modules/**",
      "**/public/**",
      "**/.next/cache/**"
    ]
  }
}
